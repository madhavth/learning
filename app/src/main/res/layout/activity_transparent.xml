<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/box_background"
    android:layout_height="match_parent"
    tools:context="com.madhavth.firebaselearning.TransparentActivity">

    <EditText
        android:id="@+id/etChangeThis"
        app:layout_constraintBottom_toTopOf="@id/btnTouchMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:text="Change Me"
        app:layout_constraintTop_toBottomOf="@id/etChangeThis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btnTouchMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
